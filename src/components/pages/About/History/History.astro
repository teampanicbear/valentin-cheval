---
import Arrows from "~/components/common/Arrows.astro";
import HistoryScript  from './script';
import HistoryListing from './HistoryListing';
import HistoryHead from './HistoryHead';
import { getImagePage } from "~/utils/images";
import { getImage } from "astro:assets";
import Close from "~/icons/close.svg";
import { marked } from 'marked';

const { data } = Astro.props;
const slideText = data.title_slider.map(({ text }) => text);
const closeIc = await getImage({ src: Close, format: "svg" });
const histories = await Promise.all(
    data.working_history.map(async(el: any) => {
        let logo = el.company.logo.startsWith('https://') ? el.company.logo : await getImagePage(`about/${el.company.logo}`);
        return ({...el, company: ({ ...el.company, logo }), description: marked.parse(el.description) });
    }),
);
let date = new Date();
let currentYear = date.getFullYear() % 100;
const currentDate = date.toLocaleString('en-US', { month: 'short' }) + ', ' + date.toLocaleString('en-US', { year: 'numeric' }); 
const convertHyphen = (field) => {
    return field.replace(/-/g, 'â€‘')
}
---
<section class="sc-about__history">
    <div class="stick-block"></div>
    <div class="about__history">
        <HistoryScript client:visible={{ rootMargin: "100% 0% 100% 0%" }}/>
        <div class="about__history-head">
            <div class="container grid">
                <HistoryHead currentYear={currentYear} slideText={slideText} client:visible={{ rootMargin: "100% 0% 100% 0%" }}/>
                <span class="fs-24 fw-reg about__history-label">(History)</span>
                <div class="about__history-sub cl-txt-desc sub-1">
                    <span class="line"></span>
                    <p class="about__history-sb">{data.subtitle}</p>
                </div>
                <p class="about__history-sub about__history-sb cl-txt-desc sub-2"> 
                    {convertHyphen(data.subtitle2)}</p>
                <a href="#" class="cl-txt-orange fs-20 about__history-link" data-cursor-stick=".about__history-link-stick" data-cursor="-link">
                    <span class="txt-link fw-med about__history-link-inner">
                        <div id="sticker" class="about__history-link-stick"></div>
                        Book a meeting!
                    </span>
                </a>
            </div>
        </div>
        <div class="about__history-body">
            <HistoryListing
                data={histories}
                currentDate={currentDate}
                client:visible={{ rootMargin: "100% 0% 100% 0%" }} closeIc={closeIc.src}>
                <Arrows slot='arrows'/>
            </HistoryListing>
        </div>
    </div>
</section>

<style lang="scss" is:global>
    @use '~/assets/styles/mixins' as *;

    .sc-about__history {
        position: relative;
        z-index: 4;
        background-color: var(--cl-dm-bg);
    }
    .stick-block {
        height: 100vh;
        @include sm {
            display: none;
        }
    }
    .about__history {
        position: sticky;
        bottom: calc((16rem - 6rem) * -1);
        z-index: 3;
        padding-block: 16rem;
        @include md {
            bottom: 0;
            padding-block: 10rem;
        }
        @include sm {
            position: relative;
            padding-block: 8rem;
            bottom: auto;
        }
        &-head {
            margin-bottom: 9.2rem;
            @include md {
                margin-bottom: 18rem;
            }
            @include sm {
                margin-bottom: 3rem;
            }
        }
        &-label {
            grid-column: 1/3;
            grid-row: 1/2;
            @include md {
                @include text(16);
                grid-column: 2/4;
                margin-bottom: 4.5rem;
            }
            @include sm {
                grid-column: 1/-1;
                margin-top: -.4em;
                margin-bottom: 0;
            }
        }
        &-title {
            position: relative;
            grid-column: 1/-1;
            grid-row: 1/2;
            margin-block: -1rem;
            &.mod-mb {
                display: none;
                @include sm {
                    display: grid;
                }
            }
            @include md {
                grid-row: 2/3;
            }
            @include sm {
                display: none;

                grid-column: 1/-1;
                grid-row: 1/2;
            } 
            &-sb { 
                overflow: hidden;
            }
            &-txt {
                padding-block: 1rem;
                @include md {
                    @include text(dis2);
                    padding-block: .6rem;
                }
                @include sm {
                    @include text(h2);
                }
                &:nth-child(1) {
                    grid-column: 4/10;
                    grid-row: 1/2;
                    @include md {
                       grid-column: 2/8;
                    }
                    @include sm {
                        grid-column: 3/-1;
                        margin-left: -6rem;
                    }
                }
                &:nth-child(2) {
                    grid-column: 4/17;
                    @include md {
                        grid-column: 2/8;
                    }
                    @include sm {
                        grid-column: 1/-1;
                    }
                }
                &:nth-child(3) {
                    grid-column: 4/17;
                    @include md {
                        grid-column: 2/-1;
                    }
                    @include sm {
                        grid-column: 1/-1;
                    }
                }
                &:nth-child(4) {
                    grid-column: 8/17;
                    white-space: nowrap;
                    @include md {
                        grid-column: 6/-1;
                    }
                    @include sm {
                        grid-column: 1/-1;
                    }
                }
                &:nth-child(5) {
                    grid-column: 8/13;
                    @include md {
                        grid-column: 6/-1;
                    }
                    @include sm {
                        grid-column: 1/-1;
                        margin-left: 6rem;
                    }
                }
            }
            &-title { 
                overflow: hidden;
            }
        }
        &-sub {
            &.sub-1 {
                grid-column: 14/17;
                grid-row: 1/2;
                justify-self: end;

                max-width: 28.3rem;
                position: relative;
                padding-top: 3.2rem;
                .line {
                    position: absolute;
                    top: 0;
                }
                @include md {
                    grid-column: 9/-1;
                    grid-row: 2/3;
                    justify-self: start;
                    max-width: unset;
                    padding-top: 2rem;
                    margin-left: -2.8rem;
                }
                @include sm {
                    grid-column: 1/-1;
                    grid-row: 3/4;

                    margin-top: 6rem;
                    margin-bottom: 2.4rem;
                    padding-top: 4rem;
                    margin-left: 6rem;
                }
            }
            &.sub-2 {
                grid-row: 1/2;
                grid-column: 5/8;
                align-self: end;

                max-width: 22rem;
                margin-bottom: -.4em;  

                @include md {
                    grid-column: 2/5;
                    grid-row: 2/3;
                    margin-right: -2rem;
                    margin-bottom: -.6em;
                }
                @include sm {
                    grid-column: 1/-1;
                    grid-row: 4/5;
                    margin-right: 0;
                    margin-left: 6rem;
                    max-width: unset;
                }
            }
        }
        &-link {
            grid-column: -4/-1;
            grid-row: 1/2;
            align-self: end;
            justify-self: end;
            overflow: hidden;
            display: flex;
            align-items: center;
            column-gap: .6rem;
            margin-bottom: -.2em;
            line-height: var(--lh-20);
            @include md {
                grid-row: 2/3;
                margin-bottom: -.5em;
            }
            @include sm {
                grid-row: 2/3;
                grid-column: 1/-1;
                margin-top: 1rem;
                margin-bottom: 0;
                @include text(16);
            }
        }
        &-body {
            &-inner {
                --widthMask: 15rem;
                overflow: hidden;
                user-select: none;
                -webkit-mask: linear-gradient(90deg, transparent, white var(--widthMask), white calc(100% - var(--widthMask)), transparent);
                mask: linear-gradient(90deg, transparent, white var(--widthMask), white calc(100% - var(--widthMask)), transparent);
                position: relative;
                @include md {
                --widthMask: 10rem;
                }
                @include sm {
                    --widthMask: 5rem;
                    margin-left: calc(var(--container-padding) * -1);
                    -webkit-mask: linear-gradient(90deg, transparent, white var(--widthMask));
                    mask: linear-gradient(90deg, transparent, white var(--widthMask));
                }
                .line {
                    position: absolute;
                    bottom: 0;
                    // width: calc(100% + var(--grid-gap));
                    width: 100%;
                }
                .border-outer {
                    padding-top: 0;
                    top: auto;
                    &.bottom {
                        --glow: 40rem;
                        padding-inline: 0;
                        width: auto;
                        left: -50vw;
                        right: -50vw;
                        height: 1px;
                    }
                    @include sm {
                        display: none;
                    }
                }
            }
        }
        &-listing {
            grid-column: 4/-2;
            overflow: visible;
            @include md {
                grid-column: 1/-1;
                width: calc(100% - 6rem);
                // margin-right: 6rem;
                margin-left: 0;
            }
            @include sm {
                width: 100%;
            }
            &-wrapper {
                display: flex;
            }
        }
        &-item {
            flex: none;
            width: calc(100% / 3);
            padding-top: 5rem;
            position: relative;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr 0px;
            gap: 0 var(--grid-gap);
            height: auto;
            color: var(--cl-dm-desc);
            .cl-txt-desc {
                color: var(--cl-dm-disable);
                transition: color .4s ease-in;
            }

            // border-style: none none none solid;
            // border-width: 0 0 0 1px;
            // border-image: linear-gradient(rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, .1) 100%) 1 100%;

            padding-bottom: 10rem;
            transition: color .4s ease-in;
            margin-bottom: 1px;
            @include md {
                width: calc(100% / 2);
            }
            @include sm {
                width: 100%;
            }
            &.active {
                @include md {
                    @include tColor(title, dm);
                    .about__history-item-act {
                        opacity: 1;
                        .ic-arr-wrap {
                            transform: scale(1);
                        }
                        .ic {
                            color: var(--cl-orange);
                        }
                    }
                }
                @include sm {
                    .about__history-item-act {
                        transform: scale(1);
                        transition: all .4s ease-in-out .2s, transform .4s ease-in-out .2s;
                    }
                }
            }
            &:hover {
                @include md-up {
                    @include tColor(title, dm);
                    .cl-txt-desc {
                        color: var(--cl-dm-desc);
                    }
                    .about__history-item-act {
                        opacity: 1;
                        .ic-arr-wrap {
                            transform: scale(1);
                        }
                    }
                }
            }
            &:first-child {
            }
            &:last-child {
                .line {
                    display: none;
                }
                .border-outer {
                    padding-right: calc(var(--border-width) / 2.5 * -1);
                }
                @include sm {
                    // border-style: none solid none solid;
                    // border-width: 0 1px 0 1px;
                }
            }
            &-act {
                justify-self: end;
                align-self: end;
                grid-column: 1/-2;
                grid-row: 1/2;
                @include size(7.2rem);
                opacity: 0;
                transition: opacity .4s ease-in-out;
                background-color: transparent;
                @include md {
                    opacity: .3;
                }

                @include sm {
                    opacity: 0;
                    transform: scale(.6);
                    transition: opacity .4s ease-in-out, transform .4s ease-in-out .1s;
                    @include size(5.4rem);
                }
                &:hover {
                    @include md-up {
                        .ic {
                            width: 2rem;
                            color: var(--cl-orange);
                        }
                    }
                }
                .ic-arr-wrap {
                    transform: scale(.6);
                    transition: transform .4s ease-in-out;
                    @include md {
                        transform: scale(1);
                    }
                }
                .ic {
                    width: 2rem;
                    @include tColor(title, dm);
                    transition: color .4s ease-in-out;
                    @include sm {
                        width: 1.6rem;
                        color: var(--cl-orange);
                    }
                }
                .btn-circle-svg {
                    display: none;
                    @include md {
                        display: block;
                    }
                }
            }
            .ruler-x {
                position: absolute;
                bottom: 0;
                width: 100%;

                display: flex;
                align-items: end;
                justify-content: space-evenly;
                li {
                    width: 1px;
                    height: 1.5rem;
                    background-color: #242528;
                    .border-outer {
                        --glow: 14rem;
                        padding-bottom: 0;
                    }
                    &:nth-child(7) {
                        .border-outer {
                            --glow: 16rem;
                        }
                        height: 5.2rem;
                        @include sm {
                            height: 3.2rem;
                        }
                    }
                }
            }
            .border-outer {
                --glow: 40rem;
                padding-bottom: 0;
            }
            .line {
                position: absolute;
                right: 0;
                height: 100%;
                width: 1px;
                bottom: 0;
                background: linear-gradient(rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, .1) 100%) 100%;
            }
            &-content {
                grid-column: 2/4;
                grid-row: 1/2;
                @include sm {
                    margin-left: -1.6rem;
                }
            }
            &-position,
            &-company,
            &-period {
                display: flex;
                flex-direction: column;
            }
            &-position {
                margin-right: -2rem;
                height: calc((var(--fs-24) * 1.3 * 2) + 1rem + (var(--fs-16) * 1.4));
            }
            &-company {
                &-txt {
                    white-space: nowrap;
                }
            }
            &-position {
                gap: 1rem;
                margin-bottom: 6rem;
                @include md {
                    gap: .2rem;
                    .fs-24 {
                        @include text(h6);
                    }
                }
                @include sm {
                    margin-bottom: 4rem;
                }
            }
            &-period {
                margin-top: 7.8rem;
                gap: 2rem 0;
                @include sm {
                    margin-top: 4rem;

                    .fs-20 {
                        @include text(16);
                    }
                }
            }
        }
        &-popup {
            position: fixed;
            z-index: 100;
            width: 100%;
            height: 100vh;
            max-height: 100vh;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.35s ease-out .2s;
            @include sm {
                height: 100svh;
                max-height: 100svh;
            }
            .container {
                height: 100%;
                display: flex;
                align-items: end;
                justify-content: end;
                padding-bottom: var(--container-padding);
                pointer-events: none;
                @include sm {
                    padding-bottom: 0;
                }
            }
            &.active {
                opacity: 1;
                pointer-events: auto;
                transition: opacity 0.35s ease-out;
                .about__history-popup-inner {
                    transform: translateY(0);
                    pointer-events: auto;
                }
            }
            &-inner {
                height: auto;
                max-height: calc(100vh - 20rem);
                min-height: 50vh;
                display: flex;
                flex-direction: column;
                background-color: var(--cl-dm-bg);
                padding: 2.4rem 2.8rem 2.4rem 4rem;
                width: 65rem;
                transition: transform .4s ease-in-out;
                transform: translateY(1.5rem);
                @include sm {
                    max-height: 80svh;
                    padding: 6svh 3.2rem;
                    margin-inline: calc(var(--container-padding) * -1);
                }
            }
            &-head {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding-block: .7rem 1.4rem;
                @include sm {
                    flex-direction: column;
                    align-items: start;
                }
                &-inner {
                    display: flex;
                    flex-direction: column;
                    gap: .4rem 0;
                }
                &-logo {
                    height: 4rem;
                    @include sm {
                        display: none;
                    }
                }
                &-position {
                }
            }
            &-body {
                flex: 1;
                padding-block: 3.2rem;
                margin-block: -.1rem -2.5rem;
                padding-right: 1.2rem;
                overflow-y: auto;
                mask-image: linear-gradient(transparent, #fff 3.2rem,#fff calc(100% - 3.2rem), transparent);
                -webkit-mask-image: linear-gradient(transparent, #fff 3.2rem,#fff calc(100% - 3.2rem), transparent);
                @include custom-scroll(.1rem, transparent, var(--cl-dm-body));
                p, ul {
                    margin-block: 1.6rem;
                }

                ul {
                    margin-left: 0px;
                    list-style: none;
                    padding-left: 1.5rem;

                    li {
                        position: relative;
                        margin-block: .2rem;

                        &::after {
                            content: '';
                            position: absolute;
                            display: block;
                            @include size(.5rem);
                            top: .5em;
                            left: -1.5rem;
                            border-radius: 50%;
                            background-color: currentColor;
                        }

                        &:first-child {
                            margin-top: 0;
                        }

                        &:last-child {
                            margin-bottom: 0;
                        }
                    }
                }
            }
            &-close {
                position: absolute;
                top: 1rem;
                right: 1rem;
                @include size(4.4rem);
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                cursor: pointer;
                opacity: .3;
                transition: opacity 1.1s cubic-bezier(.19,1,.22,1), background 1.1s cubic-bezier(.19,1,.22,1);
                display: none;
                @include sm {
                    display: flex;
                }
                &:hover {
                    background-color: rgba(255, 255, 255, 0.05);
                    backdrop-filter: blur(.5rem);
                    opacity: .8;
                    transition: opacity 1.1s cubic-bezier(.19,1,.22,1) .5s, background 1.1s cubic-bezier(.19,1,.22,1) .3s;
                    .about__history-popup-close-line {
                        background-color: #242528;
                        &:first-child {
                            span {
                                &:before {
                                    transform: translate(100%) rotate(.001deg);
                                    transition: transform 1.1s cubic-bezier(.19,1,.22,1);
                                }
                                &:after {
                                    transform: translate(0) rotate(.001deg);
                                    transition: transform 1.1s cubic-bezier(.19,1,.22,1) .5s;
                                }
                            }
                        }
                        &:last-child {
                            span {
                                &:before {
                                    transform: translateY(100%) rotate(.001deg);
                                    transition: transform 1.1s cubic-bezier(.19,1,.22,1) .25s;
                                }
                                &:after {
                                    transform: translate(0) rotate(.001deg);
                                    transition: transform 1.1s cubic-bezier(.19,1,.22,1) .75s;
                                }
                            }
                        }
                    }
                }
                &-line {
                    display: block;
                    width: 70%;
                    height: 1px;
                    background-color: #fff;
                    transition: background 1.1s cubic-bezier(.19,1,.22,1);
                    @include sm {
                        width: 50%;
                    }
                    span {
                        position: absolute;
                        overflow: hidden;
                        transform: translate(0);
                        @include size(100%);
                        &:before,
                        &:after {
                            content: "";
                            position: absolute;
                            display: block;
                            @include size(100%);
                            top: 0;
                            left: 0;
                        }
                        &:before {
                            background-color: #fff;
                        }
                        &:after {
                            background-color: var(--cl-orange);
                            transform: translate(-100%);
                        }
                    }
                    &:first-child {
                        transform: rotate(45deg);
                        span {
                            transform-origin: left;
                        }
                    }
                    &:last-child {
                        transform: rotate(-45deg);
                    }
                }
            }
            &-overlay {
                position: absolute;
                z-index: 1;
                inset: 0;
                @include size(100%);
            }
        }
    }
</style>